<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create__message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.halfblood.myapplication.Create_Message">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/home" />

        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/schedule1" />

        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/create" />
    </LinearLayout>

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/autoCompleteTextView"
        android:layout_alignParentEnd="true"
        android:completionHint="Contact" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtmessagew"
        android:hint="Message"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button2" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/button7"
        android:background="@drawable/sendm"
        android:layout_below="@+id/txtmessagew"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/button2"
        android:background="@drawable/createm"
        android:layout_below="@+id/txtmessagew"
        android:layout_alignParentEnd="true"
        android:onClick="showDialogListView" />

</RelativeLayout>
