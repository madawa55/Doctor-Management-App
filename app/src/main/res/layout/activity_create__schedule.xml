<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create__schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/backg"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.halfblood.myapplication.Create_Schedule">

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button6"
        android:text="UPDATE" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/home" />

        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/schedule1" />

        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/create" />
    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/layout1"
        android:layout_centerHorizontal="true"
        android:hint="Location" />

    <CalendarView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/calendarView"
        android:layout_below="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginStart="36dp" />

    <TextView
        android:text="Number Of  Patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/calendarView"
        android:layout_alignStart="@+id/calendarView" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/editText7"
        android:layout_marginTop="61dp"
        android:hint="Start Time"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/starttime" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/starttime"
        android:hint="Start Time"
        android:layout_alignBaseline="@+id/editText7"
        android:layout_alignBottom="@+id/editText7"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="12"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/calendarView" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:text="UPdate" />

</RelativeLayout>
